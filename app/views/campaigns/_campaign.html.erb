<div id="<%= dom_id campaign %>" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow duration-300">
  <div class="px-4 py-5 sm:p-6">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <h3 class="text-lg font-medium text-gray-900 truncate">
          <%= link_to campaign.title, campaign_path(campaign), class: "hover:text-indigo-600" %>
        </h3>
        <p class="mt-1 text-sm text-gray-500">
          <%= pluralize(campaign.total_count, 'recipient') %>
        </p>
      </div>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= campaign.status_badge_class %>">
        <%= campaign.status.titleize %>
      </span>
    </div>

    <div class="mt-4">
      <div class="flex items-center justify-between text-sm mb-1">
        <span class="text-gray-600">Progress</span>
        <span class="font-medium text-gray-900"><%= campaign.progress_percentage %>%</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-indigo-600 h-2 rounded-full transition-all duration-500" style="width: <%= campaign.progress_percentage %>%"></div>
      </div>
      
      <% if campaign.processing? || campaign.completed? %>
        <div class="mt-3 grid grid-cols-3 gap-2 text-center text-xs">
          <div>
            <div class="text-green-600 font-semibold"><%= campaign.sent_count %></div>
            <div class="text-gray-500">Sent</div>
          </div>
          <div>
            <div class="text-red-600 font-semibold"><%= campaign.failed_count %></div>
            <div class="text-gray-500">Failed</div>
          </div>
          <div>
            <div class="text-gray-600 font-semibold"><%= campaign.queued_count %></div>
            <div class="text-gray-500">Queued</div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-4 flex space-x-2">
      <%= link_to campaign_path(campaign), class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        View Details
      <% end %>
      
      <% if campaign.pending? %>
        <%= button_to "Dispatch", dispatch_campaign_campaign_path(campaign), method: :post, class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
      <% end %>
    </div>
  </div>
</div>


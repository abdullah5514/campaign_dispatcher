<div class="bg-gray-50 px-4 py-5 sm:px-6">
  <div class="flex items-center justify-between mb-2">
    <span class="text-sm font-medium text-gray-700">Overall Progress</span>
    <span class="text-sm font-medium text-gray-900"><%= campaign.progress_percentage %>%</span>
  </div>
  <div class="w-full bg-gray-200 rounded-full h-3 mb-4">
    <div class="bg-indigo-600 h-3 rounded-full transition-all duration-500" style="width: <%= campaign.progress_percentage %>%"></div>
  </div>
  
  <div class="grid grid-cols-4 gap-4">
    <div class="text-center">
      <div class="text-2xl font-bold text-gray-900"><%= campaign.total_count %></div>
      <div class="text-xs text-gray-500 uppercase tracking-wider">Total</div>
    </div>
    <div class="text-center">
      <div class="text-2xl font-bold text-green-600"><%= campaign.sent_count %></div>
      <div class="text-xs text-gray-500 uppercase tracking-wider">Sent</div>
    </div>
    <div class="text-center">
      <div class="text-2xl font-bold text-red-600"><%= campaign.failed_count %></div>
      <div class="text-xs text-gray-500 uppercase tracking-wider">Failed</div>
    </div>
    <div class="text-center">
      <div class="text-2xl font-bold text-gray-600"><%= campaign.queued_count %></div>
      <div class="text-xs text-gray-500 uppercase tracking-wider">Queued</div>
    </div>
  </div>
</div>

